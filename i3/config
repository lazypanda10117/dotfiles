### Startup Processes

# Start dunst notification daemon
$exec dunst

# Hide inactive mouse with uncluter
$exec unclutter

# Setting Wallpaper
$exec feh --bg-scale ~/Photos/Wallpapers/Final/0.jpg

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the screen before suspend.
$exec xss-lock --transfer-sleep-lock -- ~/.config/i3/lock_core.sh

# Autolock screen after 15 minutes
$exec xautolock -detectsleep -time 15 -locker "~/.config/i3/lock_core.sh"

# Executing Compton (for transparency or fading effects)
$exec compton --dbus

# Starting geoclue 2.0 for determining loccation
$exec /usr/lib/geoclue-2.0/demos/agent

# Starting redshift
$exec redshift
